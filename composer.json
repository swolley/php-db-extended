{
	"name": "swolley/yardbird",
	"description": "A wrapper for multiple types of databases",
    "type": "library",
    "scripts": {
		"test": "SHELL_INTERACTIVE=1 phpunit --bootstrap vendor/autoload.php --colors=always --stop-on-failure --whitelist ./src/ --coverage-clover ./codecoverage/xml/coverage.xml --coverage-html ./codecoverage/html/ ./tests/",
		"check": "composer check-platform-reqs"
    },
    "suggest": {
		"ext-mongo": "php mongo extension",
        "mongodb/mongodb": "For MongoDB wrapper"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "swolley",
            "email": "myentity@inwind.it"
        }
    ],
    "autoload": {
        "psr-4": {
            "Swolley\\YardBird\\": "src"
        }
	},
	"require": {
		"php": "^7.2"
	},
    "require-dev": {
		"phpunit/phpunit": "^8",
		"codacy/coverage": "dev-master"
    }
}
